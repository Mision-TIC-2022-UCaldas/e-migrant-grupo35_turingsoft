@page
@using E_Migrant.App.Dominio.Entidades
@model E_Migrant.App.FrontEnd.Pages.RegMigranteModel
@{
    ViewData["Title"] = "Registrar Migrante";
}
<h1>Registrar un nuevo migrante</h1>

<form method="post">

    <div class="form-group">
        <label asp-for="persona.Nombres">Nombres</label>
        <input asp-for="persona.Nombres" class="form-control" required="requerided">
    </div>

    <div class="form-group">
        <label asp-for="persona.Apelidos">Apellidos</label>
        <input asp-for="persona.Apelidos" class="form-control" required="requerided">
    </div>

    <div class="form-group">
        <label asp-for="persona.TipoDocumento">Tipo de documento</label>
        <select asp-for="persona.TipoDocumento" asp-items="Html.GetEnumSelectList<TipoDocumento>()" class="form-control" required="requerided">
            @* <option asp-for="TipoDocumento.CedulaCiudadania">Cedula de Ciudadania</option>
            <option asp-for="TipoDocumento.CedulaExtranjeria">Cedula de Extranjeria</option> *@
        </select>
    </div>

    <div class="form-group">
        <label asp-for="persona.Documento">Documento</label>
        <input asp-for="persona.Documento" class="form-control" required="requerided">
    </div>
    <div class="form-group">
        <label asp-for="credencial.clave">Confirmar documento</label>
        <input asp-for="credencial.clave" class="form-control" required="requerided">
    </div>
    <div class="form-group">
        <label asp-for="persona.PaisOrigen">Pais de origen</label>
        <input asp-for="persona.PaisOrigen" class="form-control" required="requerided">
    </div>

    <div class="form-group">
        <label asp-for="persona.FechaNacimiento">Fecha de nacimiento</label>
        <input asp-for="persona.FechaNacimiento" class="form-control" required="requerided">
    </div>

    <div class="form-group">
        <label asp-for="persona.Email">Correo electrónico</label>
        <input asp-for="persona.Email" class="form-control" required="requerided">
    </div>
    <div class="form-group">
        <label asp-for="credencial.Usuario">Confirmar correo</label>
        <input asp-for="credencial.Usuario" class="form-control" required="requerided">
    </div>

    <div class="form-group">
        <label asp-for="persona.Telefono">Número de telefono</label>
        <input asp-for="persona.Telefono" class="form-control">
    </div>

    <div class="form-group">
        <label asp-for="persona.Direccion">Direccion</label>
        <input asp-for="persona.Direccion" class="form-control">
    </div>

    <div class="form-group">
        <label asp-for="persona.Ciudad">Ciudad</label>
        <input asp-for="persona.Ciudad" class="form-control">
    </div>

    <div class="form-group">
        <label asp-for="persona.SituacionLaboral">Situación laboral</label>
        <select asp-for="persona.SituacionLaboral" asp-items="Html.GetEnumSelectList<SituacionLaboral>()" class="form-control">
            @* <option asp-for="SituacionLaboral.Empleado">Empleado</option>
            <option asp-for="SituacionLaboral.Desempleado">Desempleado</option>
            <option asp-for="SituacionLaboral.Independiente">Independiente</option> *@
        </select>
    </div>

    <button type="submit" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#exampleModal2">Registrar</button>
    <div class="modal fade" id="exampleModal2" tabindex="-1" aria-labelledby="exampleModalLabel2" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel2">Registrado con exito!</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    Ya puedes iniciar sesión y visitar lo que E-Migrant ofrece para ti.
                </div>
                <div class="modal-footer">
                    @* <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button> *@
                    <a type="button" href="\Login" class="btn btn-primary">Iniciar sesion</a>
                </div>
            </div>
        </div>
    </div>

</form>
